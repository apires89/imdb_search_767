<div class="container">
  <div class="row justify-content-center">
   <%= simple_form_for :search, url: movies_path, method: :get do |f| %>
   <%= f.input :query , class: "form-control" %>
   <%= f.submit "Search", class: "btn btn-primary" %>
   <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
